<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context="com.view.EditNote"
    android:background="#985a747f">





    <TextView android:text="@string/lb_title" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/text"
        android:layout_below="@+id/scrollView3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/titleEdit"
        android:hint="@string/ht_title"
        android:layout_below="@+id/text"
        android:layout_centerHorizontal="true" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/lb_body"
        android:id="@+id/textView"
        android:layout_below="@+id/titleEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="10dp" />


    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/bodyEdit"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignRight="@+id/titleEdit"
        android:layout_alignEnd="@+id/titleEdit"
        android:layout_below="@+id/textView"
        android:hint="@string/ht_body" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Archivos Adjuntos:"
        android:id="@+id/textView2"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/bodyEdit" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:id="@+id/edit_nota_files"
        android:layout_below="@+id/textView2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pliegues:"
        android:id="@+id/textView3"

        android:layout_alignParentLeft="true"

        android:layout_below="@+id/edit_nota_files"/>
    <ExpandableListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/expandableListView2"
        android:layout_alignRight="@+id/btnCreateNote"
        android:layout_alignEnd="@+id/btnCreateNote"

        android:layout_below="@+id/textView3"/>


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:id="@+id/scrollView3" >
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/lb_tags"
                android:id="@+id/editTags"
                android:layout_gravity="left" />

        </LinearLayout>

    </ScrollView>

</RelativeLayout>
