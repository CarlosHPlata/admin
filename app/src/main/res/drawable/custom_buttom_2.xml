<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="false">
        <shape android:shape="rectangle">
            <gradient android:startColor="@color/main_color" android:centerColor="@color/main_color" android:endColor="@color/main_color" android:angle="90"/>
            <corners android:radius="5dp"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>
    </item>
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <gradient android:startColor="#ff874e" android:centerColor="#ff874e" android:endColor="#ff874e" android:angle="90"/>
            <corners android:radius="5dp"/>
            <stroke android:width="4dp" android:color="@color/main_color"/>
            <padding android:left="15dp" android:top="5dp" android:right="15dp" android:bottom="5dp"/>
        </shape>

    </item>
</selector>