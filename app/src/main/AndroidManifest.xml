<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.usuario.androidadmin" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.view.Login"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.view.ListNotes"
            android:label="@string/title_activity_list_notes" >
            <intent-filter>
                <action android:name="com.view.ListNotes" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.view.OpenNote"
            android:label="@string/title_activity_open_note" >
            <intent-filter>
                <action android:name="com.view.OpenNote" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <!--
        <activity
            android:name="com.view.Login"
            android:label="@string/title_activity_login" > splitActionBarWhenNarrow  android:screenOrientation="portrait"
        </activity>
        -->

        <activity
            android:name="com.view.NewNote"
            android:label="@string/title_activity_new_note"
            android:uiOptions="splitActionBarWhenNarrow" >
            <meta-data
                android:name="android.support.UI_OPTIONS"
                android:value="splitActionBarWhenNarrow" />
        </activity>
        <activity
            android:name="com.view.EditNote"
            android:label="@string/title_activity_edit_note" >
        </activity>
        <activity
            android:name="com.view.ViewNote"
            android:label="@string/title_activity_view_note" >
        </activity>

    </application>

</manifest>
